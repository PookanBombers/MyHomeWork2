<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_list"
    android:id="@+id/mainColor">

    <TextView
        android:id="@+id/previousCalculationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/displayEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/displayEditText"
        style="@style/editTextStyle"
        android:importantForAutofill="no"
        android:ems="10"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/zero"
            style="@style/CalcButtonStyleLand"
            android:text="@string/zero"
            app:layout_constraintEnd_toEndOf="@+id/two"
            app:layout_constraintStart_toStartOf="@+id/one"
            app:layout_constraintTop_toBottomOf="@+id/one" />

        <Button
            android:id="@+id/point"
            style="@style/CalcButtonStyleLand"
            android:text="@string/point"
            app:layout_constraintStart_toEndOf="@+id/zero"
            app:layout_constraintTop_toBottomOf="@+id/three" />

        <Button
            android:id="@+id/equals"
            style="@style/CalcButtonStyleLand"
            android:text="@string/equals"
            app:layout_constraintStart_toEndOf="@+id/point"
            app:layout_constraintTop_toBottomOf="@+id/add" />

        <Button
            android:id="@+id/backspace"
            style="@style/CalcButtonStyleLand"
            android:text="@string/backspace"
            app:layout_constraintEnd_toEndOf="@+id/divide"
            app:layout_constraintStart_toStartOf="@+id/divide"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/divide"
            style="@style/CalcButtonStyleLand"
            android:text="@string/divide"
            app:layout_constraintStart_toEndOf="@+id/parenthesesCloseText"
            app:layout_constraintTop_toBottomOf="@+id/backspace" />

        <Button
            android:id="@+id/parenthesesCloseText"
            style="@style/CalcButtonStyleLand"
            android:text="@string/parenthesesCloseText"
            app:layout_constraintStart_toEndOf="@+id/parenthesesOpenText"
            app:layout_constraintTop_toBottomOf="@+id/backspace" />

        <Button
            android:id="@+id/parenthesesOpenText"
            style="@style/CalcButtonStyleLand"
            android:text="@string/parenthesesOpenText"
            app:layout_constraintStart_toEndOf="@+id/clear"
            app:layout_constraintTop_toBottomOf="@+id/backspace" />

        <Button
            android:id="@+id/clear"
            style="@style/CalcButtonStyleLand"
            android:text="@string/clear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backspace" />

        <Button
            android:id="@+id/multiply"
            style="@style/CalcButtonStyleLand"
            android:text="@string/multiply"
            app:layout_constraintStart_toEndOf="@+id/nine"
            app:layout_constraintTop_toBottomOf="@+id/divide" />

        <Button
            android:id="@+id/nine"
            style="@style/CalcButtonStyleLand"
            android:text="@string/nine"
            app:layout_constraintStart_toEndOf="@+id/eight"
            app:layout_constraintTop_toBottomOf="@+id/parenthesesCloseText" />

        <Button
            android:id="@+id/eight"
            style="@style/CalcButtonStyleLand"
            android:text="@string/eight"
            app:layout_constraintStart_toEndOf="@+id/seven"
            app:layout_constraintTop_toBottomOf="@+id/parenthesesOpenText" />

        <Button
            android:id="@+id/seven"
            style="@style/CalcButtonStyleLand"
            android:text="@string/seven"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clear" />

        <Button
            android:id="@+id/subtract"
            style="@style/CalcButtonStyleLand"
            android:text="@string/subtract"
            app:layout_constraintStart_toEndOf="@+id/six"
            app:layout_constraintTop_toBottomOf="@+id/multiply" />

        <Button
            android:id="@+id/six"
            style="@style/CalcButtonStyleLand"
            android:text="@string/six"
            app:layout_constraintStart_toEndOf="@+id/five"
            app:layout_constraintTop_toBottomOf="@+id/nine" />

        <Button
            android:id="@+id/five"
            style="@style/CalcButtonStyleLand"
            android:text="@string/five"
            app:layout_constraintStart_toEndOf="@+id/four"
            app:layout_constraintTop_toBottomOf="@+id/eight" />

        <Button
            android:id="@+id/four"
            style="@style/CalcButtonStyleLand"
            android:text="@string/four"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seven" />

        <Button
            android:id="@+id/add"
            style="@style/CalcButtonStyleLand"
            android:text="@string/add"
            app:layout_constraintStart_toEndOf="@+id/three"
            app:layout_constraintTop_toBottomOf="@+id/subtract" />

        <Button
            android:id="@+id/three"
            style="@style/CalcButtonStyleLand"
            android:text="@string/three"
            app:layout_constraintStart_toEndOf="@+id/two"
            app:layout_constraintTop_toBottomOf="@+id/six" />

        <Button
            android:id="@+id/two"
            style="@style/CalcButtonStyleLand"
            android:text="@string/two"
            app:layout_constraintStart_toEndOf="@+id/one"
            app:layout_constraintTop_toBottomOf="@+id/five" />

        <Button
            android:id="@+id/one"
            style="@style/CalcButtonStyleLand"
            android:text="@string/one"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/four" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>